{
  "name": "bp-vpn-electron",
  "version": "1.0.0",
  "description": "Cliente OpenVPN com autenticação Azure AD",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",       
    "build:linux": "electron-builder --linux",  
    "build:all": "electron-builder --win --linux" 
  },
  "dependencies": {
    "@azure/msal-node": "^2.0.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
      "appId": "com.bluepex.vpn",
      "productName": "BluePex VPN Connections",
      "directories": {
        "output": "dist"
      },
      "files": [
        "main.js",
        "preload.js",
        "renderer.js",
        "index.html",
        "config.json",
        "logo.png",
        "node_modules/**/*"
      ],
      "win": {
        "target": "nsis",
        "icon": "icon.png" 
      },
      "linux": {
        "target": "AppImage",
        "icon": "icon.png",
        "category": "Network"
      }
    }
}
